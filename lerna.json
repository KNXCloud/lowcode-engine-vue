{
  "version": "1.5.2",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org",
      "npmClient": "npm",
      "verifyAccess": false,
      "verifyRegistry": false,
      "message": "chore(release): publish %v",
      "conventionalCommits": true
    }
  }
}
